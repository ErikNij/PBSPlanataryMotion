{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build all files",
            "command": "C:\\msys64\\mingw64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "Vectors.c",
                "Planet.c",
                "LoadDatFile.c",
                "DataAnalysis.c",
                "${file}",                
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },         
        }
    ],
    "version": "2.0.0"
}